<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book_id.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book_id.user) do %>
            <%= image_tag @book_id.user.get_profile_image, size:"100x100" %><br>
            <%= @book_id.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book_id.title, @book_id %></td>
          <td><%= @book_id.body %></td>
          <td>
            <% if @book_id.favorited_by?(current_user) %>
              <p>
                <%= link_to book_favorite_path(@book_id), method: :delete do %>
                  ♥<%= @book_id.favorites.count %> いいね
                <% end %>
              </p>
              <% else %>
              <p>
                <%= link_to book_favorite_path(@book_id), method: :post do %>
                  ♡<%= @book_id.favorites.count %> いいね
                <% end %>
              </p>
            <% end %>
          </td>
          <td><p>コメント数：<%= @book_id.book_comments.count %></p></td>
          <% if @book_id.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book_id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book_id, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>

      <div>
        <% @book_id.book_comments.each do |book_comment| %>
          <%= link_to(@book_id.user) do %>
            <p><%= image_tag book_comment.user.get_profile_image, size:"100x100" %></p>
            <%= book_comment.user.name %>
          <% end %>
          <%= book_comment.comment %>
          <% if book_comment.user == current_user %>
            <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger" %>
          <% end %>
        <% end %>
      </div>
      <div class="form-group">
        <%= form_with model: [@book_id, @book_comment] do |f| %>
          <%= f.text_area :comment, rows: '5' %>
          <%= f.submit "送信" %>
        <% end %>
      </div>

    </div>
  </div>
</div>